@model BugTracker.Models.Company

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Company</h4>
<hr />

<form asp-action="Edit" class="row g-3">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <div class="col-md-12">
        <div class="form-floating">
            <input asp-for="Name" type="text" class="form-control" placeholder="Company Name">
            <label asp-for="Name" class="control-label">Company Name</label>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="col-md-12">
        <div class="form-floating">
            <input asp-for="Description" type="text" class="form-control" placeholder="Description">
            <label asp-for="Description" class="control-label">Description</label>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>
    <div class="text-center">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>


<div>
    <a asp-action="Index" class="btn btn-secondary"><i class="bx bxs-left-arrow-circle"></i> Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
